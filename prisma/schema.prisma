generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  teacher
  admin
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  phone          String
  imageUrl       String
  password       String
  NIN            String
  role           Role            @default(student)
  createdAt      DateTime        @default(now())
  teacherProfile TeacherProfile?
  studentProfile StudentProfile?
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email]) // ‚Üê Lookup shortcut!
}

model TeacherProfile {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique
  subject String
}

model StudentProfile {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
  class  String
}
