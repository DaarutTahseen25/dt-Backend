  "type": "module",
  "bugs": {
    "url": "https://github.com/DaarutTahseen25/dt-backend/issues"
  },
  "homepage": "https://github.com/DaarutTahseen25/dt-backend#readme",
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.2",
    "resend": "^4.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma": "^6.10.1"
  }
